# ============================================
# Risk Monitor Environment Configuration
# Copy this file to .env and adjust values as needed
# ============================================

# PostgreSQL
POSTGRES_USER=riskuser
POSTGRES_PASSWORD=riskpass
POSTGRES_DB=risk_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_YIELD_CURVE=yield_curve_ticks

# Application
LOG_LEVEL=INFO
REPLAY_SPEED=1.0
